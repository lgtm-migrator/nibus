{
  "extends": "../../tsconfig.settings.json",
  "compilerOptions": {
    "module": "commonjs",
    "target": "esnext",
    "outDir": "build/main",
    "rootDir": "src",
    "strict": true,                           /* Enable all strict type-checking options. */
    "baseUrl": "./",
    "strictNullChecks": true,
    "paths": {
      "usb-detection": ["@types/usb-detection"],
      "sax": ["@types/sax"],
      "xpipe": ["@types/xpipe"],
      "bonjour-hap": ["@types/bonjour-hap"],
      "debug/src/node": [
        "../../node_modules/@types/debug"
      ]
    }
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules/",
    "**/*.spec.ts",
    "lib/"
  ]
}
