{
  "name": "@nibus/cli",
  "version": "2.0.1",
  "description": "Nata-Info NiBUS",
  "keywords": [
    "nata-info",
    "nibus",
    "sarakusha"
  ],
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "type-check": "tsc --noEmit",
    "service": "cross-env NODE_ENV=production DEBUG=nibus:*,-nibus:decoder pm2 --name=nibus.service start lib/service/daemon.js",
    "build": "cross-env BABEL_ENV=production yarn clean && tsc && shx chmod a+x lib/index.js",
    "clean": "shx rm -rf lib tsconfig.tsbuildinfo",
    "lint:dev": "eslint --ext .js,.ts,.tsx src/",
    "lint": "eslint -c ../../.eslintrc-prod.js --ext .js,.ts,.tsx src/",
    "lint:fix": "eslint -c ../../.eslintrc-prod.js --ext .js,.ts,.tsx --fix src/"
  },
  "bin": {
    "nibus": "lib/index.js"
  },
  "author": "Andrei Sarakeev <avs@nata-info.ru>",
  "license": "MIT",
  "directories": {
    "lib": "lib"
  },
  "files": [
    "lib",
    "detection.yml"
  ],
  "publishConfig": {
    "registry": "https://npm.nata-info.ru"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sarakusha/nibus.git"
  },
  "bugs": {
    "url": "https://github.com/sarakusha/nibus/issues"
  },
  "devDependencies": {
    "@types/configstore": "^4.0.0",
    "@types/debug": "^4.1.0",
    "@types/jest": "^24.0.0",
    "@types/jest-diff": "^24.3.0",
    "@types/js-yaml": "^3.11.1",
    "@types/lodash": "^4.14.109",
    "@types/node": "^13.1.8",
    "@types/progress": "^2.0.3",
    "@types/serialport": "^8.0.0",
    "@types/tail": "^2.0.0",
    "@types/xdg-basedir": "^4.0.2",
    "@types/yargs": "^15.0.0",
    "babel-plugin-transform-imports": "^2.0.0",
    "cross-env": "^6.0.3",
    "supports-color": "^7.0.0"
  },
  "dependencies": {
    "@nibus/core": "^2.0.1",
    "@serialport/bindings": "^8.0.6",
    "chalk": "^3.0.0",
    "cli-table3": "^0.5.1",
    "configstore": "^5.0.0",
    "crc": "^3.5.0",
    "debug": "^4.1.0",
    "electron-log": "^4.0.4",
    "fast-xml-parser": "^3.12.16",
    "fp-ts": "^2.4.1",
    "io-ts": "^2.0.5",
    "io-ts-types": "^0.5.5",
    "js-yaml": "^3.13.1",
    "lodash": "^4.17.10",
    "monocle-ts": "^2.0.1",
    "newtype-ts": "^0.3.2",
    "pm2": "^4.2.2",
    "progress": "^2.0.3",
    "serialport": "^8.0.6",
    "table-layout": "^1.0.0",
    "tail": "^2.0.2",
    "usb-detection": "^4.5.0",
    "xpipe": "^1.0.5",
    "yargs": "^15.1.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "babel-jest"
    },
    "globals": {
      "ts-jest": {
        "tsConfigFile": "tsconfig.json"
      }
    },
    "testMatch": [
      "**/__tests__/*.+(ts|tsx|js)",
      "**/src/**/*.spec.+(ts|tsx|js)"
    ]
  },
  "workspaces": {
    "nohoist": [
      "usb-detection",
      "@serialport/bindings"
    ]
  },
  "gitHead": "652decb9c80261d6845ef834f4ae2df1e9264b2d"
}
